    def selection_panel(self,items:list, x, y):
        rlist = QListWidget(self)
        rlist.setSelectionMode(QListWidget.MultiSelection)
        rlist.addItems(items)
        rlist.setFixedHeight(270)
        rlist.setFixedWidth(270)
        rlist.move(x,y)
        rlist.setStyleSheet('color: #ffa07a')
        return rlist 

    def UX(self):
        self.image("knight.jpeg", 300, 100)
        title = QLabel("Anti-Tox", self)
        title.setStyleSheet("color: #ffa07a;font-family: Titillium; font-size: 63px;")
        title.setGeometry(300,60,300,60)
        title.move(291,3)
        interests = ["Algebra",
            "Geometry",
            "Algebra II",
            "Pre-Calculus",
            "Math Analysis",
            "Statistics",
            "Calculus AB",
            "Calculus BC",
            "Linear Algebra",
            "Physics",
