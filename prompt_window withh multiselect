            ]
        intrestlist = self.selection_panel(interests,9,60)
        goals = ["Homework", 
            "Standardized Test (ACT, SAT)",
            "Research",
            "For Fun"]
        goallist = self.selection_panel(goals,521,60)
        goal_button = QPushButton('Select goals',self) 
        goal_button.clicked.connect(goal_button, 'get_Items')
        goal_button.setGeometry(180,60,180,60)
        goal_button.move(300,300)
        goal_button.setStyleSheet('background-color: #808080; color: #ffa07a')




